generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_PRISMA_URL")
}

model User {
  id       String    @id @default(uuid())
  username String    @unique
  password String
  Session  Session[]
  Drink    Drink[]
}

model Drink {
  id          String   @id @default(uuid())
  name        String   @unique
  directions  String
  tags        String[]
  ingredients String[]
  author      User     @relation(fields: [userId], references: [id])
  userId      String
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}
